{% extends 'base.html.twig' %}


{% block body %}
  <div class="w3-bar" style="background-color:#e0e0e0">
    <a class="w3-button w3-bar-item w3-border w3-padding-small" href="{{ path('home') }}"><b>Home</b></a>
    <a class="w3-button w3-bar-item w3-border w3-padding-small" onclick="open_add_form()"><b>Add File</b></a>

  </div>
  <div class="db-form-popup db-quarter db-panel" id="item-form" hidden style="max-width:300px">
    <form action="{{ path('file_upload') }}" method="POST" class="db-border db-panel" enctype="multipart/form-data">
      <p>
        <label>Filename</label>
        <br>
        <input type="text" id="filename" name="filename" class="db-input"/>
      </p>
      <p>

      </p>
      <p>
        <label for="file">Select File</label>
        <br>
        <input type="file" id="file" name="file"/>
      </p>
      <p>
        <button type="submit" class="db-button">Upload File</button>
      </p>
    </form>
  </div>

  <script>
  function open_add_form() {
    document.getElementById("item-form").style.display = "block";
  }
  </script>

{% endblock %}

