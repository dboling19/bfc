{% extends 'base.html.twig' %}


{% block title %}
  BFC - Home
{% endblock %}

{% block body %}
  {{ include("navbar.html.twig") }}

  <div class="w3-responsive">
    <table class="w3-table-all">
      <tr>
        <th style='padding:2px'>File Name</th>
        <th style='padding:2px'>Last Modified</th>
        <th style='padding:2px'>Filesize</th>
      </tr>
      {% for row in files %}
        <tr>
         <td class='w3-border' style='padding:2px'>{{ row.filename }}</td>
         <td class='w3-border' style='padding:2px'>{{ row.mTime|format_datetime() }}</td>
         <td class='w3-border' style='padding:2px'>{{ row.size }}</td>
        </tr>
      {% endfor %}
    </table>
  </div>

{% endblock %}
